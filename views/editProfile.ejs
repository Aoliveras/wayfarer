<div class="container">
<div class="col-sm-6 offset-md-3">
        <h1>Edit Profile</h1>
        <form method="post" action="/users/profile?_method=PATCH">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= currentUser.name %>">
          </div>
          <div class="form-group">
                <label for="currentCity">Current City</label>
                <input type="text" class="form-control" id="currentCity" name="currentCity" value="<%= currentUser.currentCity %>">
              </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="<%= currentUser.email %>">
          </div>
          <div class="form-group">
            <label for="imageUrl">ImageUrl</label>
            <input type="text" class="form-control" id="imageUrl" name= "imageUrl" value="<%= currentUser.imageUrl %>">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <hr>
        <p>Go back to your <a href="/users/profile">profile</a>.</p>
      </div>
    </div>